		<%= best_in_place @teacher, :phone2 %>
		<%= best_in_place @teacher, :phone_secret2, :type => :checkbox, :collection => @checkbox%>						
	<% end %>
<h2>Funktionen im Musical</h2>
	<% @teacher.functions.each do |f|%>
